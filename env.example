# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nitroerp
DB_USER=nitroerp_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100mb
ALLOWED_FILE_TYPES=image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,model/gltf-binary,model/gltf+json

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@nitroerp.com

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External API Keys
SHIPPLANNER_API_KEY=your_shipplanner_api_key
SHIPPLANNER_API_URL=https://api.shipplanner.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/nitroerp.log

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 3D Design Configuration
THREEJS_ENABLED=true
MODEL_CACHE_SIZE=100

# Manufacturing Configuration
MANUFACTURING_WORKFLOW_ENABLED=true
QUALITY_CONTROL_ENABLED=true

# Financial Module Configuration
ACCOUNTING_ENABLED=true
INVOICE_AUTO_GENERATION=true
PAYMENT_GATEWAY_ENABLED=false

# HR Module Configuration
HR_ENABLED=true
ATTENDANCE_TRACKING=true
PAYROLL_AUTO_CALCULATION=true

# Engineering Module Configuration
ENGINEERING_ENABLED=true
CAD_INTEGRATION_ENABLED=true
VERSION_CONTROL_ENABLED=true 